@{
    ViewData["Title"] = "Proveedores";
}

<div class="text-center">
    <h1 class="display-4">Proveedores</h1>
    <p>Crear, editar, actualizar y eliminar Proveedores</p>
</div>


<div class="card">
    <div class="card-header fw-bold">
        Crear / Editar
    </div>
    <div class="card-body">
        <form onsubmit="event.preventDefault(); guardarFormulario();">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="id">ID</label>
                        <input type="number" class="form-control" id="id" name="id" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="contacto">Contacto</label>
                        <input type"text" class="form-control" id="contacto" name="contacto" required />
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="telefono">Teléfono</label>
                        <input type="text" class="form-control" id="telefono" name="telefono" required />
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                </div>
            </div>
            <div>
                <div class="col-md-4 offset-4">
                    <div class="form-group my-2 text-center">
                        <input type="submit" class="btn btn-outline-primary" value="GUARDAR" id="btnGuardar" />
                        <input type="reset" class="btn btn-outline-secondary" value="LIMPIAR" id="btnGuardar" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="mt-3">
    <h4>Registros</h4>
    <div class="table-responsive ">
        <table class="table table-hover table-striped table-bordered">
            <thead>
            <th>ID</th>
            <th>Nombre</th>
            <th>Contacto</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Acciones</th>
            </thead>
            <tbody id="tablaRegistros">
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/app.js"></script>
<script src="~/js/sesion.js"></script>
<script src="~/js/proveedores.js"></script>