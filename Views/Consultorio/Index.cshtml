@{
    ViewData["Title"] = "Consultorios Page";
}

<!-- Bootstrap 5 + Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />


<div class="container py-5">

    <div class="text-center mb-4">
        <h1 class="header-title">Consultorio</h1>
        <p class="lead text-secondary">
            Cuida mejor a tus pacientes peludos gestionando cada consultorio con facilidad.
        </p>
    </div>


    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white fs-5 fw-bold">
            <i class="bi bi-clipboard-plus me-2"></i>Crear o Editar Consultorio
        </div>
        <div class="card-body">
            <form id="frmConsultorio" onsubmit="event.preventDefault(); guardarFormulario();">
                <div class="row g-3">


                    <div class="col-md-4">
                        <label for="id" class="form-label">ID Consultorio</label>
                        <input type="number" class="form-control" id="id" name="id" placeholder="1" />
                    </div>


                    <div class="col-md-4">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Patitas Felices" required />
                    </div>

                    <!-- Sede -->
                    <div class="col-md-4">
                        <label for="sede_id" class="form-label">Sede</label>
                        <input type="number" class="form-control" id="sede_id" name="sede_id" placeholder="1" />

                    </div>
                </div>

                <!-- Botones Guardar y Limpiar -->
                <div class="text-center mt-4">
                    <button type="submit" id="btnGuardar" class="btn btn-success me-2">
                        <i class="bi bi-check-circle me-1"></i> Guardar
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Limpiar
                    </button>
                </div>
            </form>
        </div>
    </div>


    <div class="card shadow-sm">
        <div class="card-header bg-info text-white fs-5 fw-bold">
            <i class="bi bi-list-ul me-2"></i>Registros de Consultorios
        </div>
        <div class="card-body table-responsive">
            <table id="tblConsultorios" class="table table-hover table-bordered align-middle mb-0">
                <thead>
                    <tr>
                        <th class="text-center">Acciones</th>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Sede</th>
                    </tr>
                </thead>
                <tbody id="tablaRegistros">
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/app.js"></script>
<script src="~/js/sesion.js"></script>
<script src="~/js/consultorio.js"></script>