@{
    ViewData["Title"] = "Consultorio Page";
}

<!-- Bootstrap 5 + Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">

    <div class="text-center mb-4">
        <h1 class="display-4">Consultorio</h1>
        <p class="lead text-secondary">Comprometidos con la vida, el cuidado y la salud de tus mascotas.</p>
    </div>


    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white fs-5 fw-bold">
            <i class="bi bi-clipboard-plus me-2"></i>Crear o Editar Consultorio
        </div>
        <div class="card-body">
            <form onsubmit="event.preventDefault(); guardarFormulario();">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="id" class="form-label">ID</label>
                        <input type="number" class="form-control" id="id" name="id" />
                    </div>

                    <div class="col-md-4">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required />
                    </div>

                    <div class="col-md-4">
                        <label for="sede_id" class="form-label">Sede</label>
                        <select class="form-select" id="sede_id" name="sede_id" required>
                            <option value="" selected disabled>Seleccione una sede</option>
                            <option value="3">Salitre</option>
                            <option value="4">Niquitao</option>
                            <option value="5">La Cuatro Sur</option>
                            <option value="6">veterinary</option>
                        </select>
                    </div>


                </div>

                <div class="text-center mt-4">
                    <button type="submit" id="btnGuardar" class="btn btn-success me-2">
                        <i class="bi bi-check-circle me-1"></i> Guardar
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Limpiar
                    </button>
                </div>
            </form>
        </div>
    </div>


    <div class="card shadow-sm">
        <div class="card-header bg-info text-white fs-5 fw-bold">
            <i class="bi bi-list-ul me-2"></i>Registros de Consultorios
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover table-striped table-bordered align-middle mb-0">
                <thead>
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Sede</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaRegistros">
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/app.js"></script>
<script src="~/js/sesion.js"></script>
<script src="~/js/consultorio.js"></script>