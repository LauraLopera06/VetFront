@{
    ViewData["Title"] = "Farmacia Page";
}


<div class="text-center">
    <h1 class="display-4">Farmacia</h1>
    <p>El aliado de tu mascota para un bienestar total</p>
</div>

<div class="card">
    <div class="card-header fw-bold">
        Crear / Editar
    </div>
    <div class="card-body">
        <form onsubmit="event.preventDefault(); guardarFormularioFarmacia();">
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group my-2">
                        <label for="id">ID</label>
                        <input type="number" class="form-control" id="id" name="id" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group my-2">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group my-2">
                        <label for="telefono">Teléfono</label>
                        <input type="text" class="form-control" id="telefono" name="telefono" required />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="direccion">Dirección</label>
                        <input type="text" class="form-control" id="direccion" name="direccion" required />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="sede_id">Sede</label>
                        <select class="form-control" id="sede_id" name="sede_id" required >
                            <option value="">Seleccione una sede</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4 offset-4">
                <div class="form-group my-2 text-center">
                    <input type="submit" class="btn btn-outline-primary" value="GUARDAR" id="btnGuardarFarmacia" />
                    <input type="reset" class="btn btn-outline-secondary" value="LIMPIAR" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <h4>Registros</h4>
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Sede</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="tablaRegistrosFarmacia">
            </tbody>
        </table>
    </div>
</div>


<script src="~/js/app.js"></script>
<script src="~/js/sesion.js"></script>
<script src="~/js/farmacia.js"></script>
