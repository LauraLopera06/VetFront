@{
    ViewData["Title"] = "Herramienta Page";
}

<div class="text-center">
    <h1 class="display-4">Herramientas</h1>
    <p>Crear, editar, actualizar y eliminar Herramientas</p>
</div>


<div class="card">
    <div class="card-header fw-bold">
        Crear / Editar
    </div>
    <div class="card-body">
        <form onsubmit="event.preventDefault(); guardarFormulario();">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="id">ID</label>
                        <input type="number" class="form-control" id="id" name="id" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="tipo">Tipo</label>
                        <input type="text" class="form-control" id="tipo" name="tipo" required />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group my-2">
                        <label for="proveedor_id">Proveedor</label>
                        <select type="text" class="form-control" id="proveedor_id" name="proveedor_id" required>
                            <option value="">Selecciona un proveedor</option>
                        </select>
                    </div>
                </div>
            </div>
            <div>
                <div class="col-md-4 offset-4">
                    <div class="form-group my-2 text-center">
                        <input type="submit" class="btn btn-outline-primary" value="GUARDAR" id="btnGuardar" />
                        <input type="reset" class="btn btn-outline-secondary" value="LIMPIAR" id="btnGuardar" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="mt-3">
    <h4>Registros</h4>
    <div class="table-responsive ">
        <table class="table table-hover table-striped table-bordered">
            <thead>
            <th>ID</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Proveedor</th>
            <th>Acciones</th>
            </thead>
            <tbody id="tablaRegistros">
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/app.js"></script>
<script src="~/js/sesion.js"></script>
<script src="~/js/Herramienta.js"></script>